@using BKModev.Models;
@model ProductCategoryModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Listesi</h1>

<p>
    <a asp-controller="Product" asp-action="Create" class="btn btn-success float-right mb-3"><i class="fa fa-user"></i>ADD </a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>model.Products[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Categories.FirstOrDefault(x=>x.Id==item.CategoryId).CategoryName)
            </td>
            <td class="text-white">
                <a class="btn btn-success" href="~/Product/Edit/@item.Id"><i class="fa fa-cogs"></i>Edit</a>
                <a class="btn btn-danger" href="~/Product/Delete/@item.Id"><i class="fa fa-trash"></i>Delete</a>
               @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
}
    </tbody>
</table>
